<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
                        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

    <!-- 引入配置文件 -->
    <bean id="propertyConfigurer"
          class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="classpath:config.properties" />
    </bean>

    <!--主库数据源-->
    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"
          destroy-method="close">
        <property name="driverClassName" value="${driver}" />
        <property name="url" value="${url}" />
        <property name="username" value="${username}" />
        <property name="password" value="${password}" />
        <!-- 初始化连接大小 -->
        <property name="initialSize" value="${initialSize}"></property>
        <!-- 连接池最大数量 -->
        <property name="maxActive" value="${maxActive}"></property>
        <!-- 连接池最大空闲 -->
        <property name="maxIdle" value="${maxIdle}"></property>
        <!-- 连接池最小空闲 -->
        <property name="minIdle" value="${minIdle}"></property>
        <!-- 获取连接最大等待时间 -->
        <property name="maxWait" value="${maxWait}"></property>
    </bean>

    <!-- spring和MyBatis完美整合，不需要mybatis的配置映射文件 -->
    <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="dataSource" />
        <!-- 自动扫描mapping.xml文件 -->
        <property name="mapperLocations" value="classpath:/mapper/manager/*.xml"></property>
    </bean>

    <!-- 连接url参数 -->
    <util:map id="urlProperties" map-class="java.util.HashMap">
        <entry key="useUnicode" value="true"/>
        <entry key="characterEncoding" value="utf-8"/>
        <entry key="rewriteBatchedStatements" value="true"/>
    </util:map>

    <!---数据源创建工厂-->
    <bean id="dataSourceFactory" class="com.lesso.common.data.DataSourceFactory">
        <!-- 驱动 -->
        <property name="dirver" value="${driver}"/>
        <!-- 初始化连接大小 -->
        <property name="initialSize" value="${initialSize}"></property>
        <!-- 连接池最大数量 -->
        <property name="maxActive" value="${maxActive}"></property>
        <!-- 连接池最大空闲 -->
        <property name="maxIdle" value="${maxIdle}"></property>
        <!-- 连接池最小空闲 -->
        <property name="minIdle" value="${minIdle}"></property>
        <!-- 获取连接最大等待时间 -->
        <property name="maxWait" value="${maxWait}"></property>
        <!-- 连接url参数 -->
        <property name="urlProperties" ref="urlProperties"/>
    </bean>

    <!--数据回话池，根据用户提供数据会话池-->
    <bean id="sqlSessionPool" class="com.lesso.common.data.SqlSessionPool">
        <property name="dataSourceFactory" ref="dataSourceFactory"/>
        <property name="rootSqlSessionFactory" ref="sqlSessionFactory"/>
        <property name="mapperLocations" value="classpath:/mapper/user/*.xml"/>
    </bean>

    <!-- mapperFacade 为用户提供对应的Mapper-->
    <bean id="mapperFacade" class="com.lesso.common.data.MapperFacade">
        <property name="sqlSessionPool" ref="sqlSessionPool"/>
    </bean>

    <!-- (事务管理)transaction manager, use JtaTransactionManager for global tx -->
    <bean id="transactionManager"
          class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource" />
    </bean>

</beans>